<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />  <!-- Blue color when selected -->
            <corners android:radius="40dp" />  <!-- Increased corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />  <!-- Red color when not selected -->
            <corners android:radius="30dp" />  <!-- Same corner radius -->
        </shape>
    </item>
</selector>