<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Menus.HelpActivity">

    <!-- Back Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_help_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back"
        android:layout_gravity="start|top"
        android:backgroundTint="@color/white"
        android:background="@drawable/gradient_fab_background"
        android:elevation="0dp"
        android:contentDescription="Back Button"
        app:tint="@color/black"/>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="80dp"
            android:paddingHorizontal="20dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="230dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/help_image" />

            <!-- Title -->
            <TextView
                android:id="@+id/tv_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carter_one"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8dp"
                android:paddingVertical="20dp"
                android:text="What Does Yene Shop Manager Do?"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/averia_libre_light"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:text="Yene Shop Manager is a comprehensive retail management solution designed to streamline your business operations. It offers advanced inventory tracking, seamless sales processing, and detailed financial reporting. With Yene Shop Manager you can:
                
• Monitor real‐time stock levels and track every item in your inventory.
• Process sales transactions efficiently while automatically updating your records.
• Generate professional daily and monthly reports with breakdowns of gross, net, and tax figures.
• Export your sales and inventory data for backup or further analysis.
• Utilize the innovative ‘Return Sold Items’ feature to easily reverse a sale and restore stock levels.
                
Experience a smarter, more efficient way to manage your shop with Yene Shop Manager." />

            <!-- How to Use Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:paddingVertical="20dp"
                android:textStyle="bold"
                android:text="How to Use?"
                android:fontFamily="@font/carter_one"
                android:textColor="@color/black"
                android:gravity="center_horizontal" />

            <!-- Adding Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/averia_libre_light"
                android:gravity="start"
                android:text="Adding Items to Your Inventory"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="#FFFFFF"
                android:paddingTop="10dp"
                android:fontFamily="@font/averia_libre_light"
                android:lineSpacingExtra="2dp"
                android:paddingStart="8dp"
                android:text="• Go to the Home page and tap the 'ADD' button.
• Enter the item's details, including:
    – Item Name (e.g., 'Coca-Cola')
    – Category (e.g., 'SOFT DRINK')
    – Quantity (e.g., '24')
    – Purchasing Price (e.g., '50 Birr')
    – Selling Price (e.g., '60 Birr')
    – Tax Percentage (e.g., '15%')
• Tap 'ADD' to instantly include the item in your inventory."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Viewing Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/averia_libre_light"
                android:gravity="start"
                android:text="Viewing Items in Your Store"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:paddingVertical="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="#FFFFFF"
                android:fontFamily="@font/averia_libre_light"
                android:lineSpacingExtra="2dp"
                android:paddingStart="8dp"
                android:text="• Tap the 'STORE' button on the Home page.
• Items are displayed in a well-organized, categorized layout.
• To filter by category, simply tap the desired category."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Selling Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/averia_libre_light"
                android:gravity="start"
                android:text="Selling Items"
                android:paddingVertical="10dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="#FFFFFF"
                android:fontFamily="@font/averia_libre_light"
                android:lineSpacingExtra="2dp"
                android:paddingStart="8dp"
                android:text="• On the Home page, tap the 'SALES' button.
• Locate the item by searching its ID or Name.
• Enter the quantity sold and confirm the selling price.
• Tap 'Sale' to complete the transaction. The app will update your inventory and record the sale automatically."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Updating Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/averia_libre_light"
                android:gravity="start"
                android:text="Updating Items in Your Inventory"
                android:textColor="@color/black"
                android:paddingVertical="10dp"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="#FFFFFF"
                android:fontFamily="@font/averia_libre_light"
                android:lineSpacingExtra="2dp"
                android:paddingStart="8dp"
                android:text="• Tap 'STORE' and select the category of the item you wish to modify.
• Choose the item and update its attributes as needed.
• Save the changes to update your inventory immediately."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Deleting Items -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/averia_libre_light"
                android:gravity="start"
                android:text="Deleting Items from the Inventory"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:paddingVertical="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="#FFFFFF"
                android:fontFamily="@font/averia_libre_light"
                android:lineSpacingExtra="2dp"
                android:paddingStart="8dp"
                android:text="• Navigate to 'STORE' and locate the category of the item you want to remove.
• Select the item and choose the delete option to remove it from your inventory."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Export and Return Sold Items Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/averia_libre_light"
                android:gravity="start"
                android:text="Exporting Data &amp; Reversing Sales"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:paddingVertical="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="#FFFFFF"
                android:fontFamily="@font/averia_libre_light"
                android:lineSpacingExtra="2dp"
                android:paddingStart="8dp"
                android:text="• To export your sales or inventory data, tap the 'Export' option available in the menus. You can save your data as a CSV or PDF file for further analysis or record-keeping.
• If a sale needs to be reversed, simply navigate to the Reports section, tap on the relevant sales record, and confirm the return. The app will automatically restore the sold quantity to your inventory and remove the record from your sales history."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="150dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
