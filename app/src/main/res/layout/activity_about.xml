<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Menus.AboutActivity">

  <!-- Back Button -->
  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fab_about_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:src="@drawable/ic_back"
      android:layout_gravity="start|top"
      android:backgroundTint="@color/white"
      android:background="@drawable/gradient_fab_background"
      android:elevation="0dp"
      android:contentDescription="Back Button"
      app:tint="@color/black"/>


  <!-- Scrollable Content -->
  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipToPadding="false"
      android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="80dp"
        android:paddingHorizontal="20dp">

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="230dp"
          android:layout_height="250dp"
          android:layout_gravity="center_horizontal"
          android:scaleType="fitXY"
          app:srcCompat="@drawable/about_image" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:fontFamily="@font/averia_libre_light"
          android:text="Yene shop manager"
          android:textColor="@color/black"
          android:textSize="25dp"
          android:gravity="center_horizontal"
          android:textStyle="bold" />
      <TextView
          android:id="@+id/app_version"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:fontFamily="@font/averia_libre_light"
          android:paddingStart="8dp"
          android:paddingVertical="5dp"
          android:text="version: 1.0.6"
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:fontFamily="@font/averia_libre_light"
          android:paddingStart="8dp"
          android:paddingTop="15dp"
          android:text="Developed by Abel Getahun"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="18sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:fontFamily="@font/averia_libre_light"
          android:paddingStart="8dp"
          android:paddingVertical="5dp"
          android:text="Teferi Technology solution"
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:fontFamily="@font/averia_libre_light"
          android:paddingTop="20dp"
          android:text="Follow me"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="22sp" />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingVertical="20dp"
          android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="15dp">

          <ImageButton
              android:id="@+id/btnlinkedin"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:padding="5dp"
              android:scaleType="fitXY"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:src="@drawable/ic_linkedin" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="LinkedIn"
              android:textSize="12sp"
              android:textColor="@color/black"
              android:fontFamily="@font/averia_libre_light"
              android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="15dp">

          <ImageButton
              android:id="@+id/btnintagram"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:padding="5dp"
              android:scaleType="fitXY"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:src="@drawable/ic_instagram" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Instagram"
              android:textSize="12sp"
              android:textColor="@color/black"
              android:fontFamily="@font/averia_libre_light"
              android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="15dp">

          <ImageButton
              android:id="@+id/btnfacebook"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:padding="5dp"
              android:scaleType="fitXY"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:src="@drawable/ic_facebook" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Facebook"
              android:textSize="12sp"
              android:textColor="@color/black"
              android:fontFamily="@font/averia_libre_light"
              android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="15dp">

          <ImageButton
              android:id="@+id/btnx"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:padding="5dp"
              android:scaleType="fitXY"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:src="@drawable/ic_x" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="X"
              android:textSize="12sp"
              android:textColor="@color/black"
              android:fontFamily="@font/averia_libre_light"
              android:layout_marginTop="4dp"/>
        </LinearLayout>

      </LinearLayout>




    </LinearLayout>
  </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
