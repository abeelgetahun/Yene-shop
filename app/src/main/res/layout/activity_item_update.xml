<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context=".ItemUpdate">

    <!-- Background Overlay -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Bar with Buttons -->
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/update_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/background"
                app:srcCompat="@drawable/ic_back"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/update_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/background"
                app:srcCompat="@drawable/ic_delete"
                app:tint="@color/white"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/update_date"
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="62dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Main Content in a Scrollable Area -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="30dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:isScrollContainer="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="40dp"
                android:paddingTop="20dp"
                android:layout_marginBottom="40dp">

                <!-- Title Text -->
                <TextView
                    android:id="@+id/update_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update items ID"
                    android:fontFamily="@font/arbutus"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <!-- Item Name Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:textColor="@color/black"
                    android:text="Item name"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/update_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:backgroundTint="@color/black"  />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- Category Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:text="Category"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/update_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:backgroundTint="@color/black"
                    android:alpha="0.7"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- Quantity Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:text="Quantity"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/update_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:alpha="0.7"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- Purchasing Price Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:textColor="@color/black"
                    android:text="Purchasing price"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/update_pp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:backgroundTint="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- Selling Price Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:text="Selling price"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/update_ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:backgroundTint="@color/black"
                    android:alpha="0.7"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- Tax Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:textColor="@color/black"
                    android:text="Tax"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/update_tax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:backgroundTint="@color/black"
                    android:alpha="0.7"
                    android:textColor="@color/black" />

                <!-- Update Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/update_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="@color/btn_color"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>