<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Menus.SettingActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="start|top"
            android:backgroundTint="@color/white"
            android:contentDescription="back_button"
            app:tint="@color/black"
            app:fabSize="normal"
            app:elevation="4dp"/>

        <!-- Scrollable Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="230dp"
                android:layout_height="250dp"
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:layout_marginBottom="30dp"
                android:contentDescription="about_image_description"
                app:srcCompat="@drawable/about_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/update_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textColor="@color/black"
                android:hint="@string/enter_shop_name"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@drawable/custom_edittext_background"
                android:layout_marginTop="8dp"
                android:importantForAutofill="no"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/owner_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/update_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textColor="@color/black"
                android:hint="@string/enter_owner_name"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@drawable/custom_edittext_background"
                android:layout_marginTop="8dp"
                android:importantForAutofill="no"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingbutton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/background"
                android:fontFamily="@font/carter_one"
                android:paddingHorizontal="15dp"
                android:paddingVertical="12dp"
                android:text="update"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>

