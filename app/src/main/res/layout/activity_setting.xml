<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menus.SettingActivity">

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fab_setting_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:src="@drawable/ic_back"
      android:layout_gravity="start|top"
      android:backgroundTint="@color/white"
      android:background="@drawable/gradient_fab_background"
      android:elevation="0dp"
      android:contentDescription="Back Button"
      app:tint="@color/black"/>


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      android:isScrollContainer="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="80dp"
        android:paddingHorizontal="30dp">

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="230dp"
          android:layout_height="250dp"
          android:layout_gravity="center_horizontal"
          android:scaleType="fitXY"
          android:layout_marginBottom="30dp"
          app:srcCompat="@drawable/about_image" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:alpha="0.5"
          android:text="Shop name"
          android:textColor="@color/black"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/update_shop_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textCapWords"
          android:textColor="@color/black"
          android:backgroundTint="@color/black"  />

      <View
          android:layout_width="match_parent"
          android:layout_height="20dp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:alpha="0.5"
          android:text="Owner name"
          android:textColor="@color/black"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/update_owner_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textCapWords"
          android:textColor="@color/black"
          android:backgroundTint="@color/black"  />

      <View
          android:layout_width="match_parent"
          android:layout_height="10dp" />

      <Button
          android:id="@+id/settingbutton"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="30dp"
          android:backgroundTint="@color/background"
          android:fontFamily="@font/alfa_slab_one"
          android:paddingHorizontal="15dp"
          android:paddingVertical="5dp"
          android:text="UPDATE"
          android:textColor="#ffffff"
          android:textSize="20dp" />




    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>