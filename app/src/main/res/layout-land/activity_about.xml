<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Menus.AboutActivity">

  <!-- Back Button -->
  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fab_about_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:src="@drawable/ic_back"
      android:layout_gravity="start|top"
      android:backgroundTint="@color/white"
      android:background="@drawable/gradient_fab_background"
      android:elevation="0dp"
      android:contentDescription="Back Button"
      app:tint="@color/black"/>


  <!-- Scrollable Content -->
  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipToPadding="false"
      android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:paddingHorizontal="20dp">

      <ImageView
          android:id="@+id/gifImageView_about"
          android:layout_width="300dp"
          android:layout_height="match_parent"
          android:layout_marginVertical="20dp"
          android:layout_marginHorizontal="10dp"
          android:layout_gravity="top" />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginHorizontal="20dp"
          android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:fontFamily="@font/averia_libre_light"
          android:text="Yene shop manager"
          android:textColor="@color/black"
          android:textSize="25dp"
          android:gravity="center_horizontal"
          android:textStyle="bold" />
      <TextView
          android:id="@+id/app_version"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:fontFamily="@font/averia_libre_light"
          android:paddingStart="8dp"
          android:paddingVertical="5dp"
          android:text="version: 1.0.6"
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:fontFamily="@font/averia_libre_light"
          android:paddingStart="8dp"
          android:paddingTop="15dp"
          android:text="Developed by Abel Getahun"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="@font/averia_libre_light"
            android:gravity="center_horizontal"
            android:paddingVertical="5dp"
            android:paddingStart="8dp"
            android:text="Teferi Technology solution"
            android:textColor="@color/black"
            android:textSize="18sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:fontFamily="@font/margarine"
          android:paddingTop="30dp"
          android:text="Follow me"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="22sp" />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingVertical="20dp"
          android:orientation="horizontal">

        <Button
            android:id="@+id/btnLinkedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:drawableTop="@drawable/ic_linkedin"
            android:drawablePadding="4dp"
            android:text="LinkedIn"
            android:textSize="13sp"
            android:fontFamily="@font/faster_one"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="5dp" />

        <Button
            android:id="@+id/btnInstagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:drawableTop="@drawable/ic_instagram"
            android:drawablePadding="4dp"
            android:text="Instagram"
            android:textSize="13sp"
            android:fontFamily="@font/faster_one"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="5dp" />

        <Button
            android:id="@+id/btnfacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:drawableTop="@drawable/ic_facebook"
            android:drawablePadding="4dp"
            android:text="Facebook"
            android:textSize="13sp"
            android:fontFamily="@font/faster_one"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="5dp" />

        <Button
            android:id="@+id/btnx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:drawableTop="@drawable/ic_x"
            android:drawablePadding="4dp"
            android:text="x"
            android:textSize="13sp"
            android:fontFamily="@font/faster_one"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="5dp" />
      </LinearLayout>

      </LinearLayout>




    </LinearLayout>
  </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
