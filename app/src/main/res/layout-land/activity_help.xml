<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Menus.HelpActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_help_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back"
        android:layout_gravity="start|top"
        android:backgroundTint="@color/white"
        android:background="@drawable/gradient_fab_background"
        android:elevation="0dp"
        android:contentDescription="Back Button"
        app:tint="@color/black"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="50dp"
            android:baselineAligned="false">

            <!-- Left side - Image -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="top|center_horizontal"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/help_image" />
            </FrameLayout>

            <!-- Right side - Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_story"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/carter_one"
                    android:gravity="start"
                    android:lineSpacingExtra="8dp"
                    android:paddingVertical="20dp"
                    android:text="What Does Yene Shop Manager Do?"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/averia_libre_light"
                    android:lineSpacingExtra="2dp"
                    android:text="Yene Shop Manager is your all-in-one solution for managing your shop's inventory and sales. It helps you:

Track which items are in stock and which are out.
Monitor the exact quantities of each item in your store.
Simplify selling items directly from your inventory.
Automatically generate gross, net, and total sales reports, including daily and monthly summaries.
Calculate taxes on your sales effortlessly.
With Yene Shop Manager, running your store becomes smoother, smarter, and stress-free.

"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:paddingVertical="20dp"
                    android:textStyle="bold"
                    android:text="How to Use?"
                    android:fontFamily="@font/carter_one"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/averia_libre_light"
                    android:gravity="start"
                    android:text="Adding Items to Your Inventory"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="#FFFFFF"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/averia_libre_light"
                    android:lineSpacingExtra="2dp"
                    android:paddingStart="8dp"
                    android:text="• Go to the app's Home page and tap the &quot;ADD&quot; button.\n• Enter the item's details, including:\n• Item Name (e.g. &quot;Cocacola&quot;)\n• Category (e.g. &quot;SOFT DRINK&quot;)\n• Item Quantity (e.g. &quot;24&quot;)\n• Item Purchasing price (e.g. &quot;50 Birr&quot;)\n• Item Selling price (e.g. &quot;60 Birr&quot;)\n• Item Tax (e.g. &quot;15%&quot;)\n• Tap &quot;ADD&quot;, and the item will instantly be added to your inventory."
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/averia_libre_light"
                    android:gravity="start"
                    android:text="Viewing Items in Your Store"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:paddingVertical="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/averia_libre_light"
                    android:lineSpacingExtra="2dp"
                    android:paddingStart="8dp"
                    android:text="• Tap the &quot;STORE&quot; button on the Home page.\n• Items will be displayed, neatly categorized.\n• If you want to focus on a specific category, tap that category to see its items."
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/averia_libre_light"
                    android:gravity="start"
                    android:text="Selling Items"
                    android:paddingVertical="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/averia_libre_light"
                    android:lineSpacingExtra="2dp"
                    android:paddingStart="8dp"
                    android:text="• Go to the Home page and tap the &quot;SALES&quot; button.\n• Search for the item using its ID or Name.\n• Enter the quantity to be sold and the selling price.\n• Tap &quot;Sale&quot;, and the app will automatically update your inventory and sales records."
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/averia_libre_light"
                    android:gravity="start"
                    android:text="Updating Items in Your Inventory"
                    android:textColor="@color/black"
                    android:paddingVertical="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/averia_libre_light"
                    android:lineSpacingExtra="2dp"
                    android:paddingStart="8dp"
                    android:text="• Tap &quot;STORE&quot; and choose the category of the item you want to modify.\n• Find the item and tap on it.\n• Update the item's attributes as needed..\n• Save the changes, and your inventory will be updated instantly."
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/averia_libre_light"
                    android:gravity="start"
                    android:text="Deleting Items from the Inventory"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:paddingVertical="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/averia_libre_light"
                    android:lineSpacingExtra="2dp"
                    android:paddingStart="8dp"
                    android:text="• Tap &quot;STORE&quot; and navigate to the category of the item you want to delete.\n• Find the item and tap on it.\n• Choose the delete option, and the item will be removed from your inventory."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="150dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>